{
	"name": "Pastila",
	"version": "0.0.7",
	"main": "index.html",
	"description": "Simple markdown editor, that syncs with gist",
	"author": "Jacob Lowe (http://jcbl.ws)",
	"scripts": {
		"postinstall": "cd .."
	},
	"no-edit-menu": true,
